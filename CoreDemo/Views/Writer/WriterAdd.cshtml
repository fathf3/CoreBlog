@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="container-md" style="background-color : aliceblue">
    <form class="form-group" method="post" enctype="multipart/form-data">
@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post)){
    <div class="col-12 grid-margin stretch-card" >
                <div class="card" style="background-color: aliceblue">
                  <div class="card-body">
                    <h4 class="card-title">Yazar Profil</h4>
                   
                    <form class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x=> x.writerName, new {@class = "form-control"})
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail3">Eposta Adresi</label>
                        @Html.TextBoxFor(x=> x.writerMail, new {@class = "form-control"})
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x=> x.writerPassword, new {@class = "form-control"})
                      </div>
                     
                      <div class="form-group">
                        <label>Profil Resmi</label>
                        
                        <input type="file" name="writerImage">
                          
                        </div>
                      
                     <div class="form-group">
                        <label for="exampleInputPassword4">Hakkımda</label>
                        @Html.TextAreaFor(x=> x.writerAbout,15,3, new {@class = "form-control"})
                      </div>
                     
                      <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                      <button class="btn btn-light">Cancel</button>
                      
                    </form>
                  </div>
                </div>
                
              </div>
}
</form>
</div>






