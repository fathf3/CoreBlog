@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<br />
<br />
<br />
<div class="container-md">
<h1> YAZARIN BLOGLARI</h1>
<table class="table table-bordered">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Blog Başlık</th>
        <th scope="col">Oluşturma Tarihi</th>
        <th scope="col">Kategori</th>
        <th scope="col">Durum</th>
        
        <th scope="col">Düzenle</th>
        <th scope="col">Sil</th>
    </tr>
    <thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.blogId</td>
            <td>@item.blogTitle</td>
            <td>@item.blogCreateDate</td>
            <td>@item.category.categoryName</td>
            <td>
            @if (item.blogStatus)
            {
             <span class="badge badge-success">Aktif</span>
            }
            else
            {
                <span class="badge badge-secondary">Pasif</span>
            }</td>
            <td><a href="/Blog/EditBlog/@item.blogId" class="btn btn-warning">Düzenle</a></td>
            <td><a href="/Blog/DeleteBlog/@item.blogId" class="btn btn-danger">Sil</a></td>
            
        </tr>
    }
</table>
<br />
<a href="#" class="btn btn-info">Yeni Blog Oluştur</a>



</div>

