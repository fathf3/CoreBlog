@using EntityLayer.Concrete
@model List<Blog>

  <div class="row">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Son Bloglar</h4>
                    <div class="table-responsive">
                      <table class="table table-bordered">
                        <thead>
                          <tr>
                            <th> Blog Başlık </th>
                            <th> Status </th>
                            <th> Kategori </th>
                            <th> Son Güncelleme </th>
                            <th>   Detaylar </th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                            
                          <tr>
                            <td>
                              <img src="@item.bloglImage" class="mr-2" alt="image"> @item.blogTitle
                            </td> 
                            <td>
                                 @if(item.blogStatus){
                                    <label class="badge badge-success">  @item.blogStatus </label>
                                    }else
                                    {
                                        <label class="badge badge-danger">  @item.blogStatus </label>
                                    }
                                </td>
                                <td>
                              @item.category.categoryName
                            </td>
                            <td> @item.blogCreateDate.ToLongDateString() </td>
                            <td> <a href="/blog/BlogDetails/@item.blogId" class="btn btn-gradient-dark">Detay</a> </td>
                          </tr>
                     }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>